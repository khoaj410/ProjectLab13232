<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ChangePassword">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAddOrders"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Add Book"
        app:titleTextColor="@android:color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logo"

        />
    <EditText
        android:id="@+id/edMaSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID" />


    <EditText
        android:id="@+id/addNameBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Spinner
            android:id="@+id/spnTheLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_weight="4"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/addAuthorBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Author"/>
    <EditText
        android:id="@+id/addNumberBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number"/>
    <EditText
        android:id="@+id/addPublisherBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Publisher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:background="@drawable/shape"/>
        <Button
            android:id="@+id/CancelBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="@drawable/shape"/>


    </LinearLayout>
</LinearLayout>